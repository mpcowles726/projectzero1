

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title>Fantasy Football Blog</title>

    <!-- STYLESHEETS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/styles.css">

    <!-- VENDOR SCRIPTS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h1> FANTASY FOOTBALL STUFF </h1>
          <hr/>
          <form>
            <div class="form-group">
              <input class="form-control" id="blogTitle" placeholder="Title">
              <input name="name" type="text" class="form-control" id="blogContent" placeholder="Content">
            </div>
            <center>
              <button type="submit" class="btn btn-default" id="submitBtn">Submit</button>
              </center>
          </form>
          <hr/>
          <ul class="list-group" id="post-ul">
    <% for (var i=0; i < posts.length; i++) { %>
      <li class="list-group-item">
        <h4 class="list-group-item-heading"><%= posts[i].title %></h4>
        <span class='list-group-item-text'><%= posts[i].content %></span>
          <button data-id="<%=posts[i].id %>" type='button' class='close' aria-label='Close'><span aria-hidden='true'>&times;</span></button>
      </li>
    <% } %>
    </ul>
        </div>
      </div>
    </div>
    <!-- APPLICATION SCRIPTS -->
    <script src="base.js"></script>

  </body>
</html>